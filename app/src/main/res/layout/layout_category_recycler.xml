<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190sp"
    android:layout_height="200sp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="190sp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_options"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView_click_options"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/imageView_options"
                android:layout_alignLeft="@+id/imageView_options"
                android:layout_alignRight="@+id/imageView_options"
                android:layout_alignTop="@+id/imageView_options"
                android:layout_below="@+id/imageView_options"
                android:padding="20dp"
                android:visibility="invisible"
                app:srcCompat="@drawable/tickk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/textView_category_title"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>